<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lifeistech.android.techdragon.infoActivity"
    tools:showIn="@layout/activity_info"
    android:background="@drawable/bkdljdlcjad">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="536dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="アプリの説明　某有名パズルゲームのパクリです"
            android:textSize="17dp"
            android:textColor="#ff0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="遊び方　気合溜めをしてドラゴンを攻撃し撃破せよ！！"
            android:id="@+id/textView"
            android:textIsSelectable="false"
            android:textSize="17dp"
            android:textColor="#ff0000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ゲームに戻る"
            android:id="@+id/backButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:textSize="40dp"
            android:onClick="back" />

    </LinearLayout>

</RelativeLayout>
